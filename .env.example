# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=production
TZ=America/New_York

# Database (path inside Docker volume)
DATABASE_PATH=/data/wadsmedia.db

# LLM (any OpenAI-compatible provider)
# LLM_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxx
# LLM_BASE_URL=https://api.openai.com/v1
# LLM_MODEL=gpt-4o

# Telegram (recommended -- rich formatting, poster images, inline buttons)
# TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
# TELEGRAM_WEBHOOK_URL=https://yourdomain.com

# SMS via Twilio (optional -- plain text, works on any phone)
# TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# TWILIO_PHONE_NUMBER=+1234567890

# Sonarr (optional -- TV show management)
# SONARR_URL=http://sonarr:8989
# SONARR_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Radarr (optional -- movie management)
# RADARR_URL=http://radarr:7878
# RADARR_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Plex (optional -- library check + watch history)
# PLEX_URL=http://plex:32400
# PLEX_TOKEN=xxxxxxxxxxxxxxxx

# Tautulli (optional -- watch history)
# TAUTULLI_URL=http://tautulli:8181
# TAUTULLI_API_KEY=xxxxxxxxxxxxxxxx

# TMDB (optional -- discovery and recommendations)
# TMDB_ACCESS_TOKEN=eyJhbGci...

# Brave Search (optional -- web search fallback for vague queries)
# BRAVE_API_KEY=BSAxxxxxxxx

# Users
ADMIN_PHONE=+1234567890
# PHONE_WHITELIST=+1234567890,+0987654321

# Admin dashboard
# ADMIN_PASSWORD=my-secure-password
# ADMIN_SESSION_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Notifications (optional -- webhook security for proactive notifications)
# NOTIFICATION_SECRET=your-secret-token-here
